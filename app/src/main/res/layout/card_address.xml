<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/address_bg"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"

    android:background="@drawable/border_grey">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/delivery_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasee b VP"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/delivery_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="+919995768540"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stair" />

        <TextView
            android:id="@+id/stair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_stairs_disable"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delivery_address" />

        <TextView
            android:id="@+id/lift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_elevator_color"
            android:gravity="center"

            app:layout_constraintStart_toEndOf="@+id/stair"
            app:layout_constraintTop_toTopOf="@+id/stair" />

        <TextView
            android:id="@+id/delivery_address"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lineSpacingExtra="3dp"
            android:text="119 , Oswal Bhavan, Sleater Rd, Nana Chowk,
Grant Road, 9th cross road
Mumbai,  Maharashtra - 679303"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delivery_person" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stair">

            <Button
                android:id="@+id/BT_remove_children"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/remove_button"
                android:drawableLeft="@drawable/remove_drawable"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="11dp"
                app:layout_constraintStart_toEndOf="@+id/BT_edit_item" />

            <Button
                android:id="@+id/BT_edit_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/edit_button"
                android:drawableLeft="@drawable/edit_drawable"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="11dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
