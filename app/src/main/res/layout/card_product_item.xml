<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_view_items"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_white_bg_five"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
        android:id="@+id/f_product_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Product Name"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />
    <TextView
        android:id="@+id/f_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Short description"
        android:layout_below="@+id/f_product_name"
        android:textSize="10dp"
        android:textColor="@color/black_l" />
    <ImageView
        android:id="@+id/f_product_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:layout_marginTop="17dp"
        android:background="@drawable/main_cat_two"
        android:layout_below="@+id/f_product_description"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/f_product_actual_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f_product_image"
        android:layout_marginTop="17dp"
        android:text="100 INR"
        android:textSize="10sp"
        android:textColor="@color/grey_l" />
    <TextView
        android:id="@+id/f_product_selling_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f_product_actual_price"
        android:text="85 INR"
        android:gravity="top"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/f_product_offer"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/f_product_selling_price"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"

        android:background="@drawable/curved_green_bg"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="10% OFF"
        android:textColor="@color/white"
        android:textSize="8sp" />
</RelativeLayout>
